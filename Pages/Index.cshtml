@page
@model FirstPages.Index

@{
    ViewData["Title"] = "Index";
}

<div>
    <h1>@Model.Message</h1>
    <div class="row">

    @foreach (var item in Model.Products)
    {
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top" asp-append-version="true" src="@item.ImageUrl" alt="error">
                    <div class="card-body">
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Name)</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a type="button" class="btn btn-sm btn-outline-secondary" asp-page="./ProductDetails" asp-route-id="@item.Id">View</a>
                                
                            </div>
                            <small class="text-muted">@Html.DisplayFor(modelItem => item.Price) â‚¬</small>
                        </div>
                    </div>
                </div>
            </div>
    }
    </div>
</div>